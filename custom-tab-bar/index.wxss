.tabbar {
    display: flex;
    position: fixed;
    bottom: 0px;
    left: 0px;
    right: 0px;
    height: 48px;
}

.border {
    position: absolute;
    background-color: rgba(0, 0, 0, 0.33);
    width: 100%;
    height: 10px;
    transform: scaleY(0.5);
}

.tab-item {
    flex: 1;
    display: flex;
    flex-direction: column; /* tab内部元素的排列顺序 */
    align-items: center;
    justify-content: center;
}
